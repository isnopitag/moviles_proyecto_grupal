<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carmona.aerolineas.Login">

    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/strUsuario"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_centerInParent="true"/>
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/strPassword"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_below="@+id/edtUsuario"
        android:layout_centerInParent="true"/>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_bandidostudios"
        android:layout_above="@+id/edtUsuario"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/strEntrar"
        android:layout_below="@+id/edtPassword"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
